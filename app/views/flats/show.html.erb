<div class="banner">
  <div class="banner-container" style= "background-image: url('https://images.pexels.com/photos/271624/pexels-photo-271624.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260')">
  </div>
</div>
<div class="container">
  <div class="row ">
  <div class="col-md-9 flat-info-container">
    <div class=" name-address">
      <h1>
        <%=  @flat.name %>
      </h1>
      <h3>
        <%= @flat.address %>
      </h3>
    </div>
    <div class="description">
      <h2>A bit more about this flat...</h2>
      <p>
        <%=@flat.description%>
      </p>
    </div>
    <div class="map" style="background-image: url('https://maps.googleapis.com/maps/api/staticmap?center=10 Clifton Gardens London W9 1DT&amp;zoom=13&amp;scale=2&amp;size=1000x1000&amp;maptype=roadmap&amp;markers=color:red%7C10 Clifton Gardens London W9 1DT&amp;key=AIzaSyBtaHK-BLhBg7TruJu8iKk_wETqZMJM-GY')">

    </div>
  </div>
  <div class="col-md-3 booking-container">
    <div class="booking">
      <h2>Book this place!</h2>
      <form>
        <div class="col-auto">
          <label class="sr-only" for="inlineFormInputGroup">From</label>
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <div class="input-group-text">From:</div>
            </div>
            <input type="date" class="form-control" id="inlineFormInputGroup" placeholder="YYYY/MM/DD">
          </div>
        </div>
        <div class="col-auto">
          <label class="sr-only" for="inlineFormInputGroup">To:</label>
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <div class="input-group-text">To:</div>
            </div>
            <input type="date" class="form-control" id="inlineFormInputGroup" placeholder="YYYY/MM/DD">
          </div>
        </div>
        <div class="d-flex justify-content-center">
          <button type="submit" class="btn btn-primary">Book now</button>
        </div>
      </form>
    </div>
    <div class="details">
      <h3>Details</h3>
      <div class="price-info d-flex">
        <div class="user_info d-flex align-items-baseline" >
          <i class="fas fa-euro-sign"></i>
          <p><%=@flat.price_per_night%>  </p>
        </div>
        <br>
        <div class="user_info d-flex align-items-baseline ml-2">
          <i class="fas fa-user-friends"></i>
          <p><%=@flat.number_of_guests%></p>
      </div>
    </div>

    </div>
    <div class="share d-flex">
      <div class="sharing"><h3>Share</h3></div>
      <div><i class="fa fa-facebook-square fa-2x mr-2"></i></div>
      <div><i class="fa fa-twitter-square fa-2x mr-2"></i></div>
      <div><i class="fa fa-pinterest-square fa-2x mr-2"></i></div>
      <div><i class="fa fa-envelope-square fa-2x"></i></div>
    </div>
  </div>
</div>

</div>
